<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="friday.ui.MainWindow"
            prefWidth="420.0" prefHeight="560.0">
    <children>
        <VBox spacing="8.0"
              AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              fillWidth="true">
            <children>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="500.0" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="dialogContainer" spacing="8.0" prefWidth="380.0">
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>

                <HBox spacing="8.0" alignment="CENTER_LEFT" prefHeight="60.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                    <children>
                        <TextField fx:id="userInput" promptText="Command here..." HBox.hgrow="ALWAYS"/>
                        <Button fx:id="sendButton" text="Send" onAction="#handleUserInput"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
